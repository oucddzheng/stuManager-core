     <resultMap id="ResultMapForQuestionLibraryAndStudentAnswer" type="stu_system.system.model.SysQuestionLibraryModel">
		
		
		<result column="id" property="id"/>
		<result column="code" property="code" />
		<result column="user_code" property="userCode" />
		<result column="question_title" property="questionTitle" />
		
		<result column="question_option" property="questionOption"/>
		<result column="question_answer" property="questionAnswer"/>
		
		
		<association property="SysStudentAnswerModel" javaType="stu_system.system.model.SysStudentAnswerModel">
			<!-- id:声明主键，表示user_id是关联查询对象的唯一标识-->
			<!-- <id property="id" column="id" /> --> 
			<result property="id" column="idInSa" /> 
			<result property="code" column="codeInSa" />
			<result property="stuQuestionnaireRelCode" column="student_questionnaire_rel_code" /> 
			<result property="answerName" column="answer_name"/>			
	   </association>
		
	</resultMap>  
      <select id="selectQuestionLibraryAndStudentAnswer" resultMap="ResultMapForQuestionLibraryAndStudentAnswer" parameterType="Object">
	   select ql.id ,  ql.code,  ql.user_code,  ql.question_title,  ql.question_option,  ql.question_answer, 
	          sa.id  idInSa, sa.code codeInSa, sa.student_questionnaire_rel_code,  sa.answer_name
            from stu_system.question_library ql
		    join (select * from stu_system.student_answer sa where student_questionnaire_rel_code =
				   (select code from stu_system.student_create_question_relation scqr where user_code= #{userCode} and create_question_code=#{createQuestionCode})) sa
		     on ql.code = sa.question_code;
        
	</select>
 
   <resultMap id="ResultMapForQuestionAnswerForAnalysis" type="stu_system.system.model.SysQuestionLibraryModel">
		  <result property="id" column="idInLibrary" />  
	      <result property="code" column="question_code" />
		  <result property="number" column="number"/>	 
		  <result column="answer_name" property="answerName"/>	
		<!-- <association property="SysStudentAnswerModel" javaType="stu_system.system.model.SysStudentAnswerModel">
			
	   </association> -->
		
	</resultMap>  
  
  
    <select id="selectQuestionAnswerForAnalysis" resultMap="ResultMapForQuestionAnswerForAnalysis" parameterType="Object">				
       
       
       select qestlib.id idInLibrary , atuanswer.question_code , atuanswer.answer_name , count(1) number   
       from (SELECT * FROM stu_system.student_answer where student_questionnaire_rel_code in 
				 (select code from stu_system.student_create_question_relation where create_question_code = #{code}) ) atuanswer
	     left join stu_system.question_library qestlib on atuanswer.question_code = qestlib.code
		 group by question_code , answer_name
         order by idInLibrary asc
                      
	</select>


